<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="purchase_form_view_inherit" model="ir.ui.view">
      <field name="name">purchase.form.view.inherit</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">

        <field name="notes" position="after">
          <group string="Mass Update Lines' Analytic Accounts" class="oe_edit_only" attrs="{'invisible': [('state', 'not in', ['draft', 'sent', 'to_approve'])] }">
            <group>
              <field name="value_set_line_analytic" nolabel="1"/>
              <button name="set_line_analytic" type="object" string="Set Lines' Analytic Accounts" class="oe_highlight"/>
              </group>
            <group/>
          </group>
        </field>

      </field>
    </record>

  </data>
</openerp>
