        </xpath>
    </template>

    <template id="report_purchaseorder_document_stock" name="Delivery Address Phonenumber" inherit_id="purchase_stock.report_purchaseorder_document">
        <xpath expr="//div[@t-field='o.picking_type_id.warehouse_id.partner_id']" position="attributes">
