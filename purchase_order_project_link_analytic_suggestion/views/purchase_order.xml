<?xml version="1.0"?>
<odoo>
    <record id="purchase_project_link_analytic_suggestion_purchase_form" model="ir.ui.view">
        <field name="name">purchase.project.link.analytic.suggestion.purchase.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase_order_project_link.purchase_order_project_link_form"/>
        <field name="arch" type="xml">

            <field name="partner_ref" position="after">
                <field name="analytic_account_id" invisible="1"/>
            </field>

            <!-- Suggest line's analytic account to be the PO's project's analytic account -->
            <field name="order_line" position="attributes">
                <attribute name="context">{ 'default_account_analytic_id': analytic_account_id }</attribute>
            </field>

            <field name="project_id" position="after">
                <label string=" " for="set_line_analytic"/>
                <button name="set_line_analytic"
                      type="object"
                      string="Set project for all order lines"
                      class="oe_edit_only oe_right oe_link"/>
            </field>

        </field>
    </record>
</odoo>
