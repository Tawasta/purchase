<?xml version="1.0"?>
<odoo>
    <record id="purchase_order_project_link_analytic_suggestion_form" model="ir.ui.view">
        <field name="name">purchase.order.project.link.analytic.suggestion.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <field name="partner_ref" position="after">
                <field name="analytic_account_id" invisible="1"/>
            </field>

            <!-- Suggest line's analytic account to be the PO's project's analytic account -->
            <field name="order_line" position="attributes">
                <attribute name="context">{ 'default_account_analytic_id': analytic_account_id }</attribute>
            </field>

        </field>
    </record>
</odoo>