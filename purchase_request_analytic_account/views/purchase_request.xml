<?xml version="1.0"?>
<odoo>
    <record id="purchase_request_project_link_request_form" model="ir.ui.view">
        <field name="name">purchase.request.project.link.request.form</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">

            <field name="picking_type_id" position="after">
                <field name="analytic_account_id"/>
                <label string=" " for="set_line_analytic"/>
                <button name="set_line_analytic"
                      type="object"
                      string="Set project for all request lines"
                      attrs="{ 'invisible': [('state', '!=', 'draft')] }"
                      class="oe_edit_only oe_right oe_link"/>
            </field>

            <!-- Suggest line's analytic account to be the requests analytic account -->
            <field name="line_ids" position="attributes">
                <attribute name="context">{ 'default_analytic_account_id': analytic_account_id }</attribute>
            </field>

        </field>
    </record>
</odoo>
