<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_purchase" model="ir.ui.view">
        <field name="name">res.config.settings.purchase.standard.clause</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id"
               ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='purchase_setting_container']/div[last()]"
                   position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">

                    </div>
                    <div class="o_setting_right_pane">
                        <label for="purchase_order_standard_clause"/>
                        <field name="purchase_order_standard_clause"/>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>
